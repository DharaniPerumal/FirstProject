<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:layout_weight="7">
    <TextView
        android:id="@+id/lTextEmail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="RTS ACCOUNT DETAILS"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        >

    <TextView
        android:id="@+id/beni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:drawablePadding="20dp"
        android:paddingTop="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="40dp"
        android:drawableStart="@drawable/ic_business_center_black_24dp"
        android:text="REALTECH SYSTEMS"

        android:textSize="14dp"
        android:drawableLeft="@drawable/ic_business_center_black_24dp"
        android:gravity="bottom" />

        <TextView
        android:id="@+id/hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="40dp"
            android:drawablePadding="20dp"
            android:layout_marginTop="60dp"
        android:drawableStart="@drawable/acc_number"
        android:text="36874859631"
        android:textSize="14dp"
        android:drawableLeft="@drawable/acc_number" />

        <TextView
        android:id="@+id/ifsc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="40dp"
            android:layout_marginTop="110dp"
        android:drawableStart="@drawable/ifsc_acc36"
        android:text="SBIN0010484"
        android:paddingBottom="20dp"
            android:drawablePadding="20dp"
        android:textSize="14dp"
        android:drawableLeft="@drawable/ifsc_acc36" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="text"
                android:textSize="18dp"
                android:id="@+id/accounts"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp">

            </androidx.cardview.widget.CardView>
                  </RelativeLayout>


              </RelativeLayout>

          </LinearLayout>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Place Order"
    android:layout_marginLeft="20dp"
    android:textColor="@color/white"
    android:textAllCaps="false"
    android:textSize="25dp"
    android:id="@+id/btnpurchase"
    android:background="@color/colorPrimaryDark"
    android:layout_marginRight="20dp"/>
     </LinearLayout>