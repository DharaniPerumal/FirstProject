<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/border"
    android:weightSum="10"
    tools:context=".InvoiceSold">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="4.5"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Name"
        android:typeface="monospace"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:id="@+id/name"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Username"
        android:typeface="monospace"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:id="@+id/username"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="SerialNo"
        android:typeface="monospace"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:id="@+id/serial"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="VehicleNo"
            android:typeface="monospace"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:id="@+id/vehicle"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="MobileNo"
        android:typeface="monospace"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:id="@+id/mobile"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Email Id"
        android:typeface="monospace"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:id="@+id/mail"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Sold Date"
        android:typeface="monospace"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:id="@+id/date"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Price"
            android:typeface="monospace"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:id="@+id/price"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Address"
        android:typeface="monospace"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:id="@+id/address"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="City"
        android:typeface="monospace"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:id="@+id/city"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="District"
        android:typeface="monospace"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:id="@+id/district"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Postal"
        android:typeface="monospace"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:padding="15dp"
        android:id="@+id/postal"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="5.5"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="-"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:textColor="#1D0A0A"
            android:padding="15dp"
            android:id="@+id/name1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="1dp"
            android:text="-"
            android:layout_marginRight="5dp"
            android:textColor="#1D0A0A"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:id="@+id/username1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="5dp"
            android:text="-"
            android:textColor="#1D0A0A"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:id="@+id/serial1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="5dp"
            android:textColor="#1D0A0A"
            android:layout_marginTop="15dp"
            android:text="-"
            android:padding="15dp"
            android:id="@+id/vehicle1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="5dp"
            android:textColor="#1D0A0A"
            android:text="-"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:id="@+id/mobile1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="5dp"
            android:textColor="#1D0A0A"
            android:text="-"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:id="@+id/mail1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="5dp"
            android:text="-"
            android:textColor="#1D0A0A"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:id="@+id/date1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="1dp"
            android:text="-"
            android:textColor="#1D0A0A"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:id="@+id/price1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="1dp"
            android:textColor="#1D0A0A"
            android:text="-"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:id="@+id/address1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="5dp"
            android:text="-"
            android:textColor="#1D0A0A"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:id="@+id/city1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="5dp"
            android:text="-"
            android:textColor="#1D0A0A"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:id="@+id/district1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginLeft="1dp"
            android:text="-"
            android:textColor="#1D0A0A"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:padding="15dp"
            android:id="@+id/postal1"/>
        <ImageView
            android:id="@+id/imagev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/copyy"
            android:padding="15dp"
            android:layout_marginTop="1dp"/>

    </LinearLayout>




</LinearLayout>



</ScrollView>