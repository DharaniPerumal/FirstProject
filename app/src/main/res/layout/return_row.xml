<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#FCFAFA"
    android:gravity="center"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        app:cardCornerRadius="7dp">

        <TextView
            android:id="@+id/mainTitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:drawableStart="@drawable/ict_list_black_24dp"
            android:drawableLeft="@drawable/ict_list_black_24dp"
            android:drawablePadding="10dp"
            android:layout_marginLeft="20dp"
            android:text=" Title"
            android:textColor="#0C0909"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mainDesc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="40dp"
            android:drawableStart="@drawable/qrcodelite"
            android:drawableLeft="@drawable/qrcodelite"
            android:drawablePadding="14dp"
            android:text=" Description"
            android:textColor="@color/sendotp_grey"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/mainplan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="40dp"
            android:drawableStart="@drawable/versionss"
            android:drawableLeft="@drawable/versionss"
            android:drawablePadding="14dp"
            android:text=" Description"
            android:textColor="#0A0909"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/black_overlay"
            android:padding="20dp"
            android:layout_marginRight="10dp"
            android:id="@+id/btnaccept1"
            android:textSize="15dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            tools:ignore="HardcodedText" />


    </androidx.cardview.widget.CardView>


</LinearLayout>