<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:focusableInTouchMode="true"
        android:paddingTop="0dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="name"
            android:padding="15dp"
            android:drawableStart="@drawable/acc_profile"
            android:background="@drawable/border"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/acc_profile" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mobile"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:text="mobile"
            android:drawableStart="@drawable/ic_ph_iphone_black_24dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:drawableLeft="@drawable/ic_ph_iphone_black_24dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:text="email"
            android:drawablePadding="10dp"
            android:padding="15dp"
            android:drawableStart="@drawable/ic_email_black_24dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"

            android:drawableLeft="@drawable/ic_email_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="Check the Address and click to Next button"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_address1"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/border"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false" />

        </com.google.android.material.textfield.TextInputLayout>
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="Selected Nos. is:"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selectednos"
            android:drawableStart="@drawable/arrow_up"
            android:layout_marginLeft="10dp"
            android:drawablePadding="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/arrow_up" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Totel Ammount to Pay"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/amt"
            android:drawableStart="@drawable/rupees"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/rupees" />

        <Button
            android:id="@+id/btn_signup1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/btn_pressed"
            android:text="next"
            android:textColor="@android:color/white" />

    </LinearLayout>

</ScrollView>
